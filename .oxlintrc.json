{
	"$schema": "./node_modules/oxlint/configuration_schema.json",
	"env": {
		"builtin": true
	},
	"plugins": ["import", "promise"],
	"categories": {
		"correctness": "deny",
		"suspicious": "deny",
		"pedantic": "deny"
	},
	"rules": {
		"no-useless-return": "allow",
		"no-inline-comments": "allow",
		"no-warning-comments": "warn",
		"ban-ts-comment": "allow",
		"max-classes-per-file": "allow",
		"max-dependencies": "allow",
		"max-depth": "allow",
		"max-lines": "allow",
		"max-lines-per-function": "allow",
		"max-nested-callbacks": "allow",
		"no-async-endpoint-handlers": "allow",
		"no-else-return": "allow",
		"no-hex-escape": "allow",
		"no-negated-condition": "allow",
		"no-new-array": "allow",
		"no-useless-undefined": "allow",
		"prefer-code-point": "allow",
		"prefer-math-trunc": "allow",
		"require-await": "allow"
	},
	"settings": {},
	"globals": {},
	"ignorePatterns": []
}
